{
  "realm": "ipam",
  "enabled": true,
  "clients": [
    {
      "clientId": "ipam-api",
      "name": "IPAM API",
      "bearerOnly": true
    },
    {
      "clientId": "ipam-fe",
      "name": "IPAM Frontend",
      "publicClient": true,
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": true,
      "redirectUris": ["http://localhost:8080/*", "http://localhost:5173/*", "http://127.0.0.1/*"],
      "webOrigins": ["http://localhost:8080", "http://localhost:5173", "http://127.0.0.1"],
      "protocolMappers": [
        {
          "name": "aud-ipam-api",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "ipam-api",
            "access.token.claim": "true",
            "id.token.claim": "false",
            "introspection.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "devuser",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "devpassword",
          "temporary": false
        }
      ]
    }
  ]
}
